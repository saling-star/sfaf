<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}Symfony Concerto{% endblock %} - Symfony-Concerto </title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block stylesheets %}
		<!-- Feuilles de styles webpack-encore-->
            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
            {{ encore_entry_link_tags('app') }}
            <!-- Renders a link tag (if your module requires any CSS)
                 <link rel="stylesheet" href="/build/app.css"> -->
        {% endblock %}

        {% block javascripts %}
		<!-- Fichiers JS webpack-encore-->
            {{ encore_entry_script_tags('app') }}
            <!-- Renders app.js & a webpack runtime.js file
                <script src="/build/runtime.js" defer></script>
                <script src="/build/app.js" defer></script>
                See note below about the "defer" attribute -->
        {% endblock %}

	</head>
	<body>
        <div class="row">
        {% block navigation %}{% endblock %}
        </div>

		{% include "_partials/_flash.html.twig" %}
		
		{% block body %}
		<div class="row">
            <div class="col-sm-9">{% block main %}{% endblock %}</div>
            <div class="col-sm-3">{% block side %}{% endblock %}</div>
		</div>
		{% endblock %}
        
        {% block footer %}{% endblock %}
	</body>
</html>
