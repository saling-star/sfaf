        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <div class="alert-message">
            <strong>{{ "Votre compte n'est pas activ√©"|trans }}</strong>, <a href="{{ path('user_resend_verif') }}">{{ "Renvoyer le lien d'activation"|trans }}</a>
        </div>
    </div>
{% endif %}

<div class="row">
    <div>{% block main %}{% endblock %}</div>
</div>

{% endblock %}


