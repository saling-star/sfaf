
    <table id='{{ tbsort }}' class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                {% for label,type in flds %}
                <th scope="col">{{ label|trans }}</th>
                {% endfor %}
                <th scope="col">{{ 'Select'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for lower in lowers %}{# { dump(lowers) } #}
            <tr>
                {% for label,type in flds %}
                    {% if (type=='datetime') %}
                        <td>{{ attribute(lower,label)|format_datetime('short','short',locale='fr') }}</td>
                    {% elseif (type=='array') %}
                        <td>{{ attribute(lower,label)|json_encode() }}</td>
                    {% elseif (label=='title') %}
                        <td><b>{{ attribute(dcmnt,label) }}</b></td>
                    {% else %}
                        <td>{{ attribute(lower,label)|raw }}</td>
                    {% endif %}
                {% endfor %}
                {% if(lower.id is defined) %}
                <td><a href="{{ path(route_lower_id, {id: lower.id}) }}">
                <button type="submit" class="btn btn-secondary">{{ button_label|default(lower.id) }}</button></a></td>
                {% else %}
                <td><a href="{{ path(route_lower_list, {lower}) }}">
                <button type="submit" class="btn btn-secondary">{{ 'Category'|trans }}</button></a></td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'doc.no_doc_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>

<script>
$(document).ready(function() {
    $('#{{ tbsort }}').tablesorter();
});
</script>
