
    <table id='{{tuv}}' class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                {% for label,type in flds %}
                <th scope="col">{{ label|trans }}</th>
                {% endfor %}
                <th scope="col">{{ 'Select'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for lower in lowers %}
            <tr>
                {% for label,type in flds %}
                    {% if (type=='datetime') %}
                        <td>{{ attribute(lower,label)|format_datetime('short','short',locale='fr') }}</td>
                    {% else %}
                        <td>{{ attribute(lower,label) }}</td>
                    {% endif %}
                {% endfor %}
                <td>
{% if crit.dir!='' %}
    {% if crit.year!='' %}
        <a href="{{ path(route_lower_id, {id: lower.id, dir: crit.dir, year: crit.year}) }}">
    {% else %}<a href="{{ path(route_lower_id, {id: lower.id, dir: crit.dir}) }}">
    {% endif %}
    {% else %}<a href="{{ path(route_lower_id, {id: lower.id}) }}">
{% endif %}
                <button type="submit" class="btn btn-secondary">{{ button_label|default(lower.id) }}</button></a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'doc.no_doc_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>

<script>
$(document).ready(function() {
    $('#{{tuv}}').tablesorter();
});
</script>
